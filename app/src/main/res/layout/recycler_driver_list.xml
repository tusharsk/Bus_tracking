<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="#FFB300"
    >




    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#004D40"
        android:layout_margin="5dp"

        android:id="@+id/cv">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#FFECB3"
            android:padding="2dp"
            android:orientation="vertical">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                >
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="25dp"
                android:textColor="#000000"
                android:text="BUS NO :"
                android:textSize="15dp"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="30dp"
                    android:layout_marginLeft="5dp"
                    android:id="@+id/bus_no_12"
                    android:textColor="#000000"
                    android:text="bus no here"
                    android:textSize="15dp"/>

            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                >
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="25dp"
                    android:text="Driver :"
                    android:textColor="#000000"
                    android:textSize="15dp"/>
                <TextView
                    android:layout_width="0dp"
                    android:layout_height="30dp"
                    android:layout_marginLeft="5dp"
                    android:id="@+id/name_12"
                    android:layout_weight="2"
                    android:text="bus no here"
                    android:textColor="#000000"
                    android:textSize="15dp"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="30dp"
                    android:layout_marginLeft="10dp"
                    android:text="Driver No:"
                    android:textColor="#000000"
                    android:textSize="15dp"/>
                <TextView
                    android:layout_width="0dp"
                    android:layout_height="30dp"
                    android:textColor="#000000"
                    android:layout_marginLeft="5dp"
                    android:id="@+id/driver_12"
                    android:layout_weight="2"
                    android:text="bus no here"
                    android:textSize="15dp"/>

            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                >
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="25dp"
                    android:text="Teacher :"
                    android:textColor="#000000"
                    android:textSize="15dp"/>
                <TextView
                    android:layout_width="0dp"
                    android:layout_height="30dp"
                    android:layout_marginLeft="5dp"
                    android:id="@+id/teacher_12"
                    android:layout_weight="2"
                    android:textColor="#000000"
                    android:text="bus no here"

                    android:textSize="15dp"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="30dp"
                    android:layout_marginLeft="10dp"
                    android:text="No of student:"
                    android:textColor="#000000"
                    android:textSize="15dp"/>
                <TextView
                    android:layout_width="0dp"
                    android:layout_height="30dp"
                    android:layout_marginLeft="5dp"
                    android:textColor="#000000"
                    android:id="@+id/student_no_12"
                    android:layout_weight="2"
                    android:text="bus no here"
                    android:textSize="15dp"/>

            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                >
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="25dp"
                    android:text="At :"
                    android:textColor="#000000"
                    android:textSize="15dp"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:textColor="#000000"
                    android:layout_height="30dp"
                    android:layout_marginLeft="5dp"
                    android:text="Position"
                    android:id="@+id/position_12"
                    android:textSize="15dp"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="30dp"
                    android:textColor="#000000"
                    android:text=","
                    android:textSize="15dp"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="30dp"
                    android:layout_marginLeft="5dp"
                    android:textColor="#000000"
                    android:id="@+id/time_12"
                    android:text=""
                    android:textSize="15dp"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="30dp"
                    android:layout_marginLeft="5dp"
                    android:textColor="#000000"
                    android:layout_weight="2"
                    android:text="min away"
                    android:textSize="15dp"/>

            </LinearLayout>


            </LinearLayout>

    </android.support.v7.widget.CardView>

</LinearLayout>