<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#004D40">




    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:background="#004D40"
        android:layout_margin="5dp"

        android:id="@+id/cv">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="2dp"
            android:background="#C8E6C9"
            android:orientation="vertical">
            <View
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:background="#000000"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:orientation="horizontal">
                <View
                    android:layout_width="2dp"
                    android:layout_height="40dp"
                    android:background="#000000"/>
                <TextView
                    android:layout_width="0dp"
                    android:layout_height="35dp"
                    android:gravity="center"
                    android:layout_weight="5"
                    android:textColor="#000000"
                    android:id="@+id/drivername_3"
                    android:text="NAME"/>
                <View
                    android:layout_width="2dp"
                    android:layout_height="40dp"
                    android:background="#000000">

                </View>
                <TextView
                    android:layout_width="0dp"
                    android:layout_weight="4"
                    android:id="@+id/cab_no_3"
                    android:text="CAB _NO"
                    android:gravity="center"
                    android:layout_height="35dp" />
                <View
                    android:layout_width="2dp"
                    android:layout_height="40dp"
                    android:background="#000000"/>
            </LinearLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:background="#000000"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:orientation="horizontal">
                <View
                    android:layout_width="2dp"
                    android:layout_height="40dp"
                    android:background="#000000"/>
                <TextView
                    android:layout_width="0dp"
                    android:layout_height="35dp"
                    android:gravity="center"
                    android:layout_weight="5"
                    android:textColor="#000000"
                    android:id="@+id/driverphonenumber_3"
                    android:text="Phone Number"
                    />
                <View
                    android:layout_width="2dp"
                    android:layout_height="40dp"
                    android:background="#000000">

                </View>
                <TextView
                    android:layout_width="0dp"
                    android:layout_weight="4"
                    android:id="@+id/special_3"
                    android:text="Specialisation"
                    android:gravity="center"
                    android:layout_height="35dp" />
                <View
                    android:layout_width="2dp"
                    android:layout_height="40dp"
                    android:background="#000000"/>
            </LinearLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:background="#000000"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center">
                <View
                    android:layout_width="2dp"
                    android:layout_height="68dp"
                    android:background="#000000"
                    />
                <RatingBar
                    android:id="@+id/rating_3"
                    android:layout_width="wrap_content"
                    android:layout_marginLeft="30dp"

                    android:layout_height="wrap_content"
                    android:layout_margin="5dp"
                    android:clickable="false"
                    android:focusableInTouchMode="false"
                    android:focusable="false"
                    />
                <View
                    android:layout_width="2dp"
                    android:layout_height="68dp"
                    android:layout_marginLeft="4dp"
                    android:layout_gravity="right"
                    android:foregroundGravity="right"
                    android:background="#000000"/>
            </LinearLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:background="#000000"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:orientation="horizontal">
                <View
                    android:layout_width="2dp"
                    android:layout_height="40dp"
                    android:background="#000000"/>
                <TextView
                    android:layout_width="0dp"
                    android:gravity="center"
                    android:layout_height="35dp"
                    android:text="Position"
                    android:id="@+id/Position_3"
                    android:layout_weight="3"/>
                <View
                    android:layout_width="2dp"
                    android:layout_height="40dp"
                    android:background="#000000"/>
                <TextView
                    android:layout_width="0dp"
                    android:layout_height="35dp"
                    android:text="Time"
                    android:gravity="center"
                    android:layout_weight="3"
                    android:id="@+id/time_3"/>
                <View
                    android:layout_width="2dp"
                    android:layout_height="40dp"
                    android:background="#000000"/>
                <ImageView
                    android:layout_width="0dp"
                    android:layout_height="40dp"
                    android:layout_margin="1dp"
                    android:layout_weight="1"
                    android:src="@drawable/tick"
                    />
                <View
                    android:layout_width="2dp"
                    android:layout_height="40dp"

                    android:background="#000000"/>
            </LinearLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:background="#000000"/>
        </LinearLayout>

    </android.support.v7.widget.CardView>

</LinearLayout>